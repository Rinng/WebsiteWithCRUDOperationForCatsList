}


<h2>Update a Cat</h2>
@Html.ValidationSummary()


<form method="post">
    @*display infromation*@
    <fieldset>
        <legend>Cat Information</legend>

        <p>
            <label for="catBreedId">Cat Breed ID:</label>
            <input type="text" name="catBreedId" value="" />
        </p>

        <p>
            <label for="catname">Cat's Name:</label>
            <input type="text" name="catname" value="" />
        </p>

        <p>
            <label for="dob">Cat's Birthday:</label>
            <input type="text" name="dob" value="" />
        </p>
        <p>
            <label for="catGender">Cat Gender:</label>
            <input type="text" name="catGender" value="" />
        </p>

        <p>
            <label for="catColor">Cat Color:</label>
            <input type="text" name="catColor" value="" />
        </p>

        <p>
            
            <label for="sellingLocation">Selling Location:</label>
            <input type="text" name="sellingLocation" value="" />
        </p>
        <p>
          
            <label for="price">Set Price:</label>
            <input type="text" name="price" value="" />
        </p>

        <p>
            <label for="sellingStatus">Selling Status:</label>
            <input type="text" name="sellingStatus" value="" />
        </p>

        <input type="hidden" name="catid" value="" />
        <p><input type="submit" name="buttonAdd" value="Add Cat" /></p>
    </fieldset>
    <p><a href="~/ADOCRUDCats.cshtml">Return to Cats listing</a></p>
</form>