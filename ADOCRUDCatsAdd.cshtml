@using System.Data.SqlClient;
@using System.Configuration;
@{
    Page.Title = "Update Cat";
    //Layout = "Your Layout Page goes here";
    Layout = "~/Shared/_Layout.cshtml";



    //add the cat
    if (IsPost)
    {


        var catBreedId = Request.Form["catBreedId"].AsInt();
        var catname = Request.Form["catname"];
        var dob = Request.Form["dob"];
        var catGender = Request.Form["catGender"];
        var catColor = Request.Form["catColor"];
        var sellingLocation = Request.Form["sellingLocation"];
        var price = Request.Form["price"].AsDecimal();
        var sellingStatus = Request.Form["sellingStatus"];

        @Function.AddCatFunc(catBreedId, catname, dob, catGender, catColor, sellingLocation, price, sellingStatus);    

        Response.Redirect("~/ADOCRUDCats");
    }

}
